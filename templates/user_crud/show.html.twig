{% extends 'base.html.twig' %}

{% block title %}Détails de l'Utilisateur{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="text-center mb-4">Détails de l'Utilisateur</h1>

        <table class="table table-bordered">
            <tbody>
                <tr>
                    <th scope="row">ID</th>
                    <td>{{ user.id }}</td>
                </tr>
                <tr>
                    <th scope="row">Email</th>
                    <td>{{ user.email }}</td>
                </tr>
                <!-- Ajoutez d'autres détails de l'utilisateur ici -->
            </tbody>
        </table>

        <div class="text-center">
            <a href="{{ path('app_user_crud_index') }}" class="btn btn-primary btn-lg">Retour à la liste</a>
            <a href="{{ path('app_user_crud_edit', {'id': user.id}) }}" class="btn btn-warning btn-lg">Modifier</a>
        </div>

        <div class="text-center mt-3">
            {{ include('user_crud/_delete_form.html.twig') }}
        </div>
{% endblock %}
